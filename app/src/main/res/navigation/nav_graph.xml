<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.recipesplus.ui.auth.LoginFragment"
        android:label=" "
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />

        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.recipesplus.ui.auth.RegisterFragment"
        android:label="Create Account"
        tools:layout="@layout/fragment_register">

        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.recipesplus.ui.home.HomeFragment"
        android:label=" "
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />

        <action
            android:id="@+id/action_homeFragment_to_myRecipesFragment"
            app:destination="@id/myRecipesFragment" />

        <action
            android:id="@+id/action_homeFragment_to_addRecipeFragment"
            app:destination="@id/addRecipeFragment" />

        <action
            android:id="@+id/action_homeFragment_to_searchOnlineFragment"
            app:destination="@id/searchOnlineFragment" />

        <action
            android:id="@+id/action_homeFragment_to_searchByIngredientsFragment"
            app:destination="@id/searchByIngredientsFragment" />

        <action
            android:id="@+id/action_homeFragment_to_favoritesFragment"
            app:destination="@id/favoritesFragment" />

        <action
            android:id="@+id/action_homeFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>

    <fragment
        android:id="@+id/myRecipesFragment"
        android:name="com.example.recipesplus.ui.recipes.MyRecipesFragment"
        android:label="My Recipes"
        tools:layout="@layout/fragment_my_recipes">

        <action
            android:id="@+id/action_myRecipesFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

        <action
            android:id="@+id/action_myRecipesFragment_to_recipeDetailsFragment"
            app:destination="@id/recipeDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/addRecipeFragment"
        android:name="com.example.recipesplus.ui.recipes.AddRecipeFragment"
        android:label="Add Recipe"
        tools:layout="@layout/fragment_add_recipe">

        <action
            android:id="@+id/action_addRecipeFragment_to_myRecipesFragment"
            app:destination="@id/myRecipesFragment"
            app:popUpTo="@id/addRecipeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/recipeDetailsFragment"
        android:name="com.example.recipesplus.ui.recipes.RecipeDetailsFragment"
        android:label="Recipe Details"
        tools:layout="@layout/fragment_recipe_details">

        <argument
            android:name="recipeId"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.recipesplus.ui.recipes.FavoritesFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorites">

        <action
            android:id="@+id/action_favoritesFragment_to_recipeDetailsFragment"
            app:destination="@id/recipeDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchOnlineFragment"
        android:name="com.example.recipesplus.ui.recipes.SearchOnlineFragment"
        android:label="Search Recipes Online"
        tools:layout="@layout/fragment_search_online">

        <action
            android:id="@+id/action_searchOnlineFragment_to_myRecipesFragment"
            app:destination="@id/myRecipesFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchByIngredientsFragment"
        android:name="com.example.recipesplus.ui.recipes.SearchByIngredientsFragment"
        android:label="Search By Ingredients"
        tools:layout="@layout/fragment_search_by_ingredients" />

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.recipesplus.ui.about.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />

</navigation>
